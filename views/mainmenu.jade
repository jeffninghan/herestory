extends layout

block content

	div(class="container")
		img(src="/images/categories.png" style="position:absolute; top:0px; left:0px; z-index:0") 
		img(src="/images/check.png" style="visibility:visible; position:absolute; left:400px; top:310px; z-index:1" id="check")     
		button(type="submit" class="btn btn-default" style="position:absolute; top:310px; left:50px; width:300px; height:50px; background:transparent; border:none; color:transparent; outline:none" onclick="toggle_visibility('check')")

	script(type='text/javascript').
		function toggle_visibility(id) {
			var e = document.getElementById(id);
			if(e.style.visibility == 'visible')
				e.style.visibility = 'hidden';
			else
				e.style.visibility = 'visible';
		}
